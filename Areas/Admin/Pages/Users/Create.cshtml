@page
@using AdminPanel.Areas.Admin.Pages.User;
@model CreateModel
@{
    ViewData["Title"] = "Users";
    Layout = "_Dashboard";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create a new user</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">User</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="d-flex justify-content-center my-3 align-items-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="card-title text-light">User | Create</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fa-solid fa-minus text-light"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <form id="createForm needs-validation" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="d-flex justify-content-center">
                                    <div class="mb-3 col-md-3">
                                        <div class="">
                                            <img id="profilePicture" class="rounded-circle" object-fit:cover" src="~/img/user.png">
                                            <input class="form-control shadow-none my-3" asp-for="Input.ProfilePicture" onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" type="file" id="formFile">
                                        </div>
                                    </div>
                                </div>

                                <div class="my-2">
                                    <h5>Personal Information</h5>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.FirstName" class="form-control shadow-none" autocomplete="firstName" aria-required="true" placeholder="First name" />
                                        <label asp-for="Input.FirstName" class="form-label">First name</label>
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.LastName" class="form-control shadow-none" autocomplete="lastName" aria-required="true" placeholder="Last name" />
                                        <label asp-for="Input.Email" class="form-label">Last name</label>
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control shadow-none" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="my-3">
                                    <h5>Assign Roles</h5>
                                    @for (int i = 0; i < Model.RoleList.Count; i++)
                                    {
                                        <div class="form-check">
                                            <input type="hidden" asp-for="@Model.RoleList[i].RoleId" />
                                            <input type="hidden" asp-for="@Model.RoleList[i].RoleName" />
                                            <input asp-for="@Model.RoleList[i].Selected" class="form-check-input" />
                                            <label class="form-check-label" asp-for="@Model.RoleList[i].Selected">
                                                @Model.RoleList[i].RoleName
                                            </label>
                                        </div>
                                    }
                                </div>
                                
                                <button type="submit" class="w-100 btn btn-lg btn-success">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
