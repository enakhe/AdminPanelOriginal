@page
@using AdminPanel.ViewModels
@model AdminPanel.Areas.Admin.Pages.User.RoleModel
@{
    ViewData["Title"] = "Users";
    Layout = "_Dashboard";
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Manage User Roles</h1>
                    <p>Add/Remove Roles for User / @Model.UserData.FullName</p>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Role</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="d-flex justify-content-center my-3 align-items-center">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="card-title text-light">User | Roles</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fa-solid fa-minus text-light"></i>
                                </button>
                            </div>
                        </div>
                        <form method="post">
                        <div class="card-body">
                            
                                @{
                                    foreach (ManageUserRolesViewModel manageUserRolesViewModel in Model.ManageUserRolesList)
                                    {
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@manageUserRolesViewModel.RoleId" />
                                            <input type="hidden" asp-for="@manageUserRolesViewModel.RoleName" />
                                            <input asp-for="@manageUserRolesViewModel.Selected" class="form-check-input shadow-none" />
                                            <label class="form-check-label" asp-for="@manageUserRolesViewModel.Selected">
                                                @manageUserRolesViewModel.RoleName
                                            </label>
                                        </div>
                                    }
                                }
                                <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="card-footer">
                            <input type="submit" value="Update" class="btn btn-success"
                                   style="width:auto" />
                            <a asp-action="EditUser" asp-route-id="@Model.UserData.Id"
                               class="btn btn-danger" style="width:auto">Cancel</a>
                        </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
