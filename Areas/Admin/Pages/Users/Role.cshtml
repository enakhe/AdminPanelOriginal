@page
@using AdminPanel.ViewModels
@model AdminPanel.Areas.Admin.Pages.User.RoleModel
@{
    ViewData["Title"] = "Users";
    Layout = "_Dashboard";
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Manage User Roles</h1>
                    @{
                        if (Model.UserData != null)
                        {
                            <p>Add/Remove Roles for User / @Model.UserData.FullName</p>
                        }
                    }
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Role</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="d-flex justify-content-center my-3 align-items-center">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="card-title text-light">User | Roles</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fa-solid fa-minus text-light"></i>
                                </button>
                            </div>
                        </div>
                        <form method="post">
                            <div class="card-body">
                                <div class="d-flex justify-content-center">
                                    <div class="justify-items-center">
                                        <div class="col-md-12">
                                            @Html.ListBoxFor(model => model.RoleList,new MultiSelectList(Model.RoleList, "Value", "Text"), new { @class = "form-control w-100", multiple = "multiple", id = "Roles" })
                                        </div>
                                    </div>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success" style="width:auto">Update</button>
                                <a asp-area="Admin" asp-asp-page="/Users/Index"
                                   class="btn btn-danger" style="width:auto">Cancel</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
