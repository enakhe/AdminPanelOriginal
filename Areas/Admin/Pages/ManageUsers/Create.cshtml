@page
@using AdminPanel.Areas.Admin.Pages.User;
@model CreateModel
@{
    ViewData["Title"] = "Users";
    Layout = "_Dashboard";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create a new user</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">User</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="d-flex justify-content-center my-3 align-items-center">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="card-title text-light">User | Create</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fa-solid fa-minus text-light"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <form id="createForm needs-validation" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="d-flex justify-content-center">
                                    <div class="mb-3 col-md-3">
                                        <div class="">
                                            <img id="profilePicture" class="rounded-circle" src="~/img/user.png">
                                            <input class="form-control shadow-none my-3" asp-for="Input.ProfilePicture" onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" type="file" id="formFile">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 my-2">
                                        <h5>Personal Information</h5>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.UserName" class="form-control shadow-none" aria-required="true" placeholder="Username" />
                                            <label asp-for="Input.UserName" class="form-label">Username</label>
                                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.FirstName" class="form-control shadow-none" aria-required="true" placeholder="First name" />
                                                    <label asp-for="Input.FirstName" class="form-label">First name</label>
                                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.LastName" class="form-control shadow-none" aria-required="true" placeholder="Last name" />
                                                    <label asp-for="Input.Email" class="form-label">Last name</label>
                                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.Email" class="form-control shadow-none" aria-required="true" placeholder="name@example.com" />
                                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.PhoneNumber" class="form-control shadow-none" aria-required="true" placeholder="Phone number" />
                                                    <label asp-for="Input.PhoneNumber" class="form-label">Phone number</label>
                                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.DOB" class="form-control shadow-none" aria-required="true" placeholder="name@example.com" />
                                                    <label asp-for="Input.DOB" class="form-label">Date of birth</label>
                                                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <select asp-for="Input.Gender" class="form-control shadow-none">
                                                        <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                    </select>
                                                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>

                                    <div class="col-md-6 my-2">
                                        <h5>Contact Information</h5>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.Street" class="form-control shadow-none" aria-required="true" placeholder="Home address" />
                                            <label asp-for="Input.Street" class="form-label">Street address</label>
                                            <span asp-validation-for="Input.Street" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.City" class="form-control shadow-none" aria-required="true" placeholder="Work address" />
                                            <label asp-for="Input.City" class="form-label">City address</label>
                                            <span asp-validation-for="Input.City" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.State" class="form-control shadow-none" aria-required="true" placeholder="Other address" />
                                            <label asp-for="Input.State" class="form-label">State address</label>
                                            <span asp-validation-for="Input.State" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.ZipCode" class="form-control shadow-none" aria-required="true" placeholder="Zip code" />
                                            <label asp-for="Input.ZipCode" class="form-label">Zip code</label>
                                            <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 my-3">
                                        <div>
                                            <h5>Assign Roles</h5>
                                            @for (int i = 0; i < Model.RoleList.Count; i++)
                                            {
                                                <div class="form-check">
                                                    <input type="hidden" asp-for="@Model.RoleList[i].RoleId" />
                                                    <input type="hidden" asp-for="@Model.RoleList[i].RoleName" />
                                                    <input asp-for="@Model.RoleList[i].Selected" class="form-check-input" />
                                                    <label class="form-check-label" asp-for="@Model.RoleList[i].Selected">
                                                        @Model.RoleList[i].RoleName
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="col-md-6 my-3">
                                        <div>
                                            <h5>Personlization</h5>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input shadow-none" aria-required="true" asp-for="Input.IsAuthorized" type="checkbox" role="switch" checked>
                                                <label class="form-check-label" asp-for="Input.IsAuthorized">Authorize</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                
                                
                                <button type="submit" class="w-100 btn btn-lg btn-success">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
